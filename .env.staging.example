# Staging Environment Configuration
# Copy this file to .env.staging and fill in your values

# Deployment Configuration
DEPLOY_HOST=staging.yourdomain.com
DEPLOY_USER=deploy
DEPLOY_PATH=/var/www/portfolio-staging
DEPLOY_URL=https://staging.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_staging

# API Configuration
VITE_API_URL=https://staging.yourdomain.com/api
VITE_SENTRY_DSN=your-sentry-dsn-here

# CDN Configuration (optional)
CDN_PURGE_URL=https://api.cloudflare.com/client/v4/zones/YOUR_ZONE_ID/purge_cache
CDN_API_TOKEN=your-cloudflare-api-token

# Notification Configuration (optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Backup Configuration
BACKUP_DESTINATION=/var/backups/portfolio-staging
BACKUP_RETENTION_DAYS=7

# SSH Configuration
# Make sure your SSH key is added to the server:
# ssh-copy-id deploy@staging.yourdomain.com
