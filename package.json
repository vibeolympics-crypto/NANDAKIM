    "validate:sns": "node scripts/validate-sns-images.js",
    "migrate": "node server/scripts/migrate.js up",
    "migrate:down": "node server/scripts/migrate.js down",
    "migrate:status": "node server/scripts/migrate.js status",
    "backup": "node server/scripts/backup.js",
    "backup:restore": "node server/scripts/backup.js restore",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:production": "bash scripts/deploy.sh production",
    "deploy:pages:staging": "wrangler pages deploy dist --project-name naija-nexus-staging --branch staging",
    "deploy:pages:production": "wrangler pages deploy dist --project-name naija-nexus-production --branch production",
    "rollback:staging": "bash scripts/rollback.sh staging",
    "rollback:production": "bash scripts/rollback.sh production",
    "lighthouse": "node lighthouse-audit.js",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:verify": "node verify-lighthouse-optimizations.js",
    "perf:report": "node scripts/generate-performance-report.js",
    "perf:verify": "node scripts/verify-resource-optimization.js",
    "perf:full": "npm run build && npm run perf:report && npm run lighthouse",
    "sitemap": "node generate-sitemap.js",
    "seo:check": "npm run sitemap && npm run lighthouse:verify",
    "security:audit": "node scripts/security-audit.js",
    "security:check": "npm audit && node scripts/security-audit.js",
    "clean": "node scripts/cleanup-project.js",
    "clean:dry-run": "node scripts/cleanup-project.js --dry-run"
  },
