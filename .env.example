# ============================================
# Portfolio Admin System - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# For production deployment, ensure all REQUIRED variables are set with secure values

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# --------------------------------------------
# Admin Authentication (REQUIRED)
# --------------------------------------------
# Admin username (minimum 3 characters)
ADMIN_USERNAME=admin

# For DEVELOPMENT: Use plain text password
ADMIN_PASSWORD=your_secure_password_here

# For PRODUCTION: Use bcrypt hashed password instead
# Generate hash: node -e "console.log(require('bcrypt').hashSync('your_password', 10))"
# ADMIN_PASSWORD_HASH=$2b$10$...

# Admin role: admin | editor | viewer
ADMIN_ROLE=admin

# --------------------------------------------
# JWT Configuration (REQUIRED)
# --------------------------------------------
# Secret key for JWT signing (minimum 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ⚠️  MUST be changed in production!
JWT_SECRET=your_jwt_secret_key_change_in_production

# Token expiration in seconds (300-86400 = 5min-24h)
TOKEN_EXPIRES=3600

# Refresh token expiration in seconds (86400-2592000 = 1day-30days)
REFRESH_TOKEN_EXPIRES=604800

# --------------------------------------------
# CSRF Protection (REQUIRED)
# --------------------------------------------
# Secret key for CSRF token generation (minimum 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ⚠️  MUST be changed in production!
CSRF_SECRET=your_csrf_secret_key_change_in_production

# ============================================
# SERVER CONFIGURATION
# ============================================

# Node environment: development | production | test
NODE_ENV=development

# Server port (1024-65535)
PORT=3001

# Server host (use 0.0.0.0 for production to accept external connections)
# HOST=0.0.0.0

# CORS allowed origin (set to your frontend domain in production)
# CORS_ORIGIN=https://yourdomain.com

# ============================================
# HTTPS & SECURITY CONFIGURATION
# ============================================

# Production API domain for CSP configuration
# API_DOMAIN=https://api.yourdomain.com

# Note: HTTPS redirect is automatically enabled when NODE_ENV=production
# Ensure your reverse proxy (nginx/Apache) sets X-Forwarded-Proto header
# Cookie security (secure, sameSite) is automatically configured based on NODE_ENV

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB URI (if using MongoDB)
# MONGODB_URI=mongodb://localhost:27017/portfolio
# For production with authentication:
# MONGODB_URI=mongodb://username:password@host:port/database?authSource=admin

# File storage directories
# DATA_DIR=./server/data
# BACKUP_DIR=./server/backups

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Maximum file upload size in bytes (default: 10MB)
# MAX_FILE_SIZE=10485760

# Upload directory
# UPLOAD_DIR=./uploads

# Temporary directory for processing
# TEMP_DIR=./temp

# ============================================
# EMAIL CONFIGURATION
# ============================================

# SMTP Configuration (for contact form emails)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Email sender information
# EMAIL_FROM_NAME=Portfolio Admin
# EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# Optional Gmail shortcut variables (used when SMTP_* values are omitted)
# GMAIL_USER=your-email@gmail.com
# GMAIL_APP_PASSWORD=your-app-password

# Optional override for the contact form recipient
# CONTACT_FORM_EMAIL=airroad1004@gmail.com

# ============================================
# EXTERNAL SERVICES
# ============================================

# --------------------------------------------
# Google Maps Configuration
# --------------------------------------------
# Get your API key from: https://console.cloud.google.com/google/maps-apis
VITE_GOOGLE_MAPS_API_KEY=

# --------------------------------------------
# Kakao Maps Configuration
# --------------------------------------------
# Get your API key from: https://developers.kakao.com/
VITE_KAKAO_MAPS_API_KEY=

# --------------------------------------------
# Google Analytics
# --------------------------------------------
# Get your tracking ID from: https://analytics.google.com/
# GA_TRACKING_ID=UA-XXXXXXXXX-X
# or for GA4:
# GA_TRACKING_ID=G-XXXXXXXXXX

# --------------------------------------------
# Google AdSense
# --------------------------------------------
# Get your publisher ID from: https://www.google.com/adsense/
# ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX

# --------------------------------------------
# Sentry (Error Tracking)
# --------------------------------------------
# Get your DSN from: https://sentry.io/
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ============================================
# BACKUP CONFIGURATION
# ============================================

# Enable automatic backups
# BACKUP_ENABLED=true

# Backup schedule (cron format)
# Daily at 2 AM: 0 2 * * *
# Every 6 hours: 0 */6 * * *
# BACKUP_SCHEDULE=0 2 * * *

# Backup retention in days
# BACKUP_RETENTION_DAYS=30

# Backup destination directory
# BACKUP_DESTINATION=./backups

# ============================================
# MONITORING & LOGGING
# ============================================

# Log level: error | warn | info | debug
# LOG_LEVEL=info

# Enable metrics endpoint
# METRICS_ENABLED=false

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# Before deploying to production, ensure:
# ✅ JWT_SECRET is set to a secure random value (not default)
# ✅ CSRF_SECRET is set to a secure random value (not default)
# ✅ ADMIN_PASSWORD_HASH is used instead of ADMIN_PASSWORD
# ✅ NODE_ENV is set to 'production'
# ✅ CORS_ORIGIN is set to your actual domain
# ✅ Database credentials are secure
# ✅ SMTP credentials are configured for email functionality
# ✅ Backup is enabled and configured
# ✅ All external service API keys are valid
# ✅ File upload directories have proper permissions
# ✅ SSL/TLS certificates are configured (HTTPS)
# ✅ Reverse proxy sets X-Forwarded-Proto header
# ✅ HTTPS redirect is working (test with curl)
# ✅ Secure cookies are enabled (check browser dev tools)
# ✅ HSTS header is set (check response headers)
# ✅ CSP policy doesn't block legitimate resources
# ✅ Firewall rules are properly configured
# ✅ Monitoring and logging are enabled
